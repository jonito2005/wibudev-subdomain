<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto glass rounded-xl p-6">
            <h1 class="text-2xl font-bold text-center text-white mb-6 font-heading tracking-tight">Admin Login</h1>
            
            <% if (error) { %>
                <div class="mb-4 p-3 bg-red-500/20 text-red-100 rounded-lg border border-red-500/20">
                    <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
                </div>
            <% } %>
            
            <form method="POST" action="/admin/login" class="space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-user mr-2"></i>Username
                    </label>
                    <input 
                        type="text" 
                        name="username" 
                        class="w-full glass-input rounded-lg p-3"
                        required
                    >
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-lock mr-2"></i>Password
                    </label>
                    <input 
                        type="password" 
                        name="password" 
                        class="w-full glass-input rounded-lg p-3"
                        required
                    >
                </div>
                
                <button 
                    type="submit"
                    class="w-full glass-button text-white rounded-lg py-3 font-semibold mt-6 flex items-center justify-center"
                >
                    <i class="fas fa-sign-in-alt mr-2"></i>Login
                </button>
            </form>
        </div>
    </div>
</div>

<script src="/js/animations.js"></script>

<%- include('../partials/footer') %> 